pipeline{
agent any
      stages{
            stage("Compile Stage"){
              steps{
                  withMaven(jdk: 'JDK', maven: 'Maven'){
                  'mvn clean compile'                            
                  }
              }
            }
            stage("Testing Stage"){
              steps{
                  withMaven(JDK: 'jdk', maven:'Maven'){
                  'mvn test'
                  }
              }
            }
            stage("Deployment Stage"){
              steps{
                  withMaven(JDK: 'jdk', maven:'Maven'){
                  'mvn deploy'
                  }
              }
         }
      }
}
